{
  "name": "@qntm-code/utils",
  "version": "2.1.0",
  "author": "Ben Meyrick<bameyrick@gmail.com>",
  "description": "A collection of useful utility functions with associated TypeScript types. All functions have been unit tested.",
  "keywords": [
    "TypeScript",
    "isNullOrUndefined",
    "isEmpty",
    "isEqual",
    "isNumber",
    "randomNumberBetweenRange",
    "asyncForEach",
    "delay",
    "convertTimeUnits",
    "getToday",
    "setEndOfDay",
    "setEndOfHour",
    "setEndOfMinute",
    "setEndOfMonth",
    "setEndOfSecond",
    "setEndOfWeek",
    "setEndOfYear",
    "setStartOfDay",
    "setStartOfHour",
    "setStartOfMinute",
    "setStartOfMonth",
    "setStartOfSecond",
    "setStartOfWeek",
    "setStartOfYear",
    "null",
    "undefined",
    "empty",
    "string",
    "equal",
    "equality",
    "array",
    "object",
    "async",
    "forEach",
    "for",
    "each",
    "convert",
    "time",
    "dates",
    "date",
    "milliseconds",
    "seconds",
    "minutes",
    "hours",
    "days",
    "weeks",
    "months",
    "years",
    "set",
    "get",
    "start",
    "end",
    "today",
    "getScrollParent",
    "scroll",
    "parent",
    "random",
    "number",
    "between",
    "range"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bameyrick/utils.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": " yarn lint && tsc -p tsconfig.json --outDir dist/",
    "lint": "yarn tidy-clean && yarn tslint --project tsconfig.lint.json",
    "test": "KARMA_SINGLE_RUN=false karma start ./karma.conf.js",
    "test-single": "yarn tidy-clean && yarn lint && yarn karma start ./karma.conf.js",
    "tidy-clean": "rm -rf dist coverage",
    "prepare-husky": "npx husky-init && yarn",
    "pre-commit": "lint-staged && yarn test-single"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --print-width 140 --single-quote --arrow-parens avoid  --trailing-comma es5 --parser typescript --write",
      "tslint --project tsconfig.lint.json",
      "karma start ./karma.conf.js"
    ],
    "*.js": ["prettier --print-width 140 --single-quote --arrow-parens avoid --trailing-comma es5 --parser babel --write"],
    "*.json": ["prettier --print-width 140 --single-quote --trailing-comma es5 --parser json --write"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/jasmine": "^3.5.14",
    "codecov": "^3.7.2",
    "husky": "^7.0.0",
    "jasmine-core": "^3.6.0",
    "karma": "^5.2.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "^4.0.1",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^5.1.0",
    "karma-typescript-es6-transform": "^5.5.1",
    "lint-staged": "^10.3.0",
    "number-array-from-range": "^1.0.1",
    "prettier": "^2.1.1",
    "puppeteer": "^5.2.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "viewport-details": "^3.0.1"
  }
}
